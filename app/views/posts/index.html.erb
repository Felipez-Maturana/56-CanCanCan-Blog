<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Posts</h1>

<div class="container">
  
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Todos los Posts</div>

    <!-- Table -->
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>User Owner</th>

          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.name %></td>
              <td><%= post.user %></td>
              <% if can? :read, post %>
                <td><%= link_to 'Show', post, class: 'btn btn-primary' %></td>
              <% end %>
              <% if can? :edit, post %>
                <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info' %></td>        
              <% end %>
              <% if can? :destroy, post %>        
                <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% if can? :create, Post %>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
<% end %>

